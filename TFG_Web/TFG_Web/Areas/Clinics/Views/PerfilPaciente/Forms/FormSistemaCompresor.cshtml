<div class="tab-pane fade" id="form8" role="tabpanel" aria-labelledby="navPagina8FormUsuario">
    <div class="tab-pane active" id="home">
        <form asp-area="Clinics" asp-controller="" asp-action="" method="post" asp-antiforgery="true">
            <hr>
            <div class="col-sm-12">
                <div style="display:inline-block">
                    <h5>Sistema Compresor</h5>
                </div>
                @if (!Model.Pacientes.P_Finalizado)
                {
                    <button class="btn btn-success" style="display:inline-block;float:right" asp-area="Clinics" asp-controller="FormControlSistemaCompresor" asp-action="IndexId" asp-route-id="@Model.Pacientes.Id">
                        Crear
                        <i class="fas fa-plus"></i>
                    </button>
                }
            </div>
            <br />
            <div class="table-responsive col-12 mx-auto" align="left">
                <table class="table table-striped table-bordered table_PerfilPacienteSistemaCompresor">
                    <thead>
                        <tr class="text-left align-text-bottom" style="background-color:#87CEFA">
                            <th style="vertical-align: middle" scope="col">Fecha </th>
                            <th style="vertical-align: middle" scope="col">Horas de uso dia</th>
                            <th style="vertical-align: middle" scope="col">Horas de uso noche</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListSistemaCompresor != null)
                        {
                            @foreach (var sistemaCompresor in Model.ListSistemaCompresor)
                            {
                                <tr class="text-sm-left">
                                    <td style="cursor: pointer;" onclick="location.href = '@(Url.Action("Index", "SistemaCompresor", new {  idSistemaCompresor = sistemaCompresor.Id, idPaciente = @Model.Pacientes.Id }))'"> @sistemaCompresor.CSC_Fecha.ToString("dd-MM-yyyy") </td>
                                    <td style="cursor: pointer;" onclick="location.href = '@(Url.Action("Index", "SistemaCompresor", new {  idSistemaCompresor = sistemaCompresor.Id, idPaciente = @Model.Pacientes.Id }))'"> @sistemaCompresor.CSC_HorasUsoDia </td>
                                    <td style="cursor: pointer;" onclick="location.href = '@(Url.Action("Index", "SistemaCompresor", new {  idSistemaCompresor = sistemaCompresor.Id, idPaciente = @Model.Pacientes.Id }))'"> @sistemaCompresor.CSC_HorasUsoNoche </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="text-sm-left">
                                <td style="cursor: pointer;"> Error </td>
                                <td style="cursor: pointer;"> Error </td>
                                <td style="cursor: pointer;"> Error </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>